            android:theme="@style/AppTheme.NoActionBar">
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activities.GetStartedActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SigninActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.QuestionDetailActivity"
            android:label="@string/title_activity_question_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ViewOfferActivity"
            android:label="@string/title_activity_view_offer"
            android:theme="@style/AppTheme.NoActionBar" >
